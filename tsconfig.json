{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["jest"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@constants/*": ["constants/*"],
      "@constants": ["./src/constants"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"],
      "@navigation/*": ["navigation/*"],
      "@services/*": ["services/*"],
      "@network/*": ["network/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
